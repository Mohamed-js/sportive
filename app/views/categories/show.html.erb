<div class="  h-100">

<% reverse = true %>
<% @articles.each_slice(2) do |article1, article2| %>

  <% if reverse %>
    <div class="row vertical-card">
      <div class="col-6">
        <div class="row">
          <div class="col-6">
            <%= image_tag "#{article1.image.downcase}", class:"cover-img" %>
          </div>
          <div class="col-6 p-3">
            <h3 class="my-card-catt"><%= @category.name.capitalize %></h3>
            <strong><h4><%=article1.title%> </h4></strong>
            <p class="my-card-textt"><%=article1.text%></p>
            <p class="text-wrap">BY:<strong><%=article1.author.name%></strong></p>
            <% @votee = Vote.where(["user_id = ? AND article_id = ?", "#{session[:current_user]["id"]}", "#{article1.id}"]) %>
            <% if @votee.empty? %>
              <%= link_to '<div class="divo"><h4 class="m-0"><i class="fas fa-caret-square-up"></i></h4><strong><h6>UP VOTE</h6></strong></div>'.html_safe, "/votes/vote_up/#{article1.id}", method: :get, class:"text-right nav-link  orange" %>
            <% else %>
              <p class="btn btn-secondary">Voted</p>
            <% end %>
          </div>
        </div>
      </div>
      <% if !article2.nil? %>
      <div class="col-6">
        <div class="row">
          <div class="col-6">
            <%= image_tag "#{article2.image.downcase}", class:"cover-img" %>
          </div>
          <div class="col-6 p-3">
            <h3 class="my-card-catt"><%= @category.name.capitalize %></h3>
            <strong><h4><%=article2.title%></h4></strong>
            <p class="my-card-textt"><%=article2.text%></p>
            <p class="text-wrap">BY:<strong><%=article2.author.name%></strong></p>
            <% @votee = Vote.where(["user_id = ? AND article_id = ?", "#{session[:current_user]["id"]}", "#{article2.id}"]) %>
            <% if @votee.empty? %>
              <%= link_to '<div class="divo"><h4 class="m-0"><i class="fas fa-caret-square-up"></i></h4><strong><h6>UP VOTE</h6></strong></div>'.html_safe, "/votes/vote_up/#{article2.id}", method: :get, class:"text-right nav-link  orange" %>
            <% else %>
              <p class="btn btn-secondary">Voted</p>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
  </div>
  <% reverse = false %>
  <% else %>

    <div class="row vertical-card">
      <div class="col-6">
        <div class="row">
          <div class="col-6 p-3">
            <h3 class="my-card-catt"><%= @category.name.capitalize %></h3>
            <strong><h4><%=article1.title%> </h4></strong>
            <h6 class="my-card-textt"><%=article1.text%></h6>
            <p class="text-wrap">BY:<strong><%=article1.author.name%></strong></p>
            <% @votee = Vote.where(["user_id = ? AND article_id = ?", "#{session[:current_user]["id"]}", "#{article1.id}"]) %>
            <% if @votee.empty? %>
              <%= link_to '<div class="divo"><h4 class="m-0"><i class="fas fa-caret-square-up"></i></h4><strong><h6>UP VOTE</h6></strong></div>'.html_safe, "/votes/vote_up/#{article1.id}", method: :get, class:"text-right nav-link  orange" %>
            <% else %>
              <p class="btn btn-secondary">Voted</p>
            <% end %>
          </div>
          <div class="col-6">
            <%= image_tag "#{article1.image.downcase}", class:"cover-img" %>
          </div>
        </div>
      </div>
      <% if !article2.nil? %>
      <div class="col-6">
        <div class="row">
          <div class="col-6 p-3">
            <h3 class="my-card-catt"><%= @category.name.capitalize %></h3>
            <strong><h4><%=article2.title%> </h4></strong>
            <p class="my-card-textt"><%=article2.text%></p>
            <p class="text-wrap">BY:<strong><%=article2.author.name%></strong></p>
            <% @votee = Vote.where(["user_id = ? AND article_id = ?", "#{session[:current_user]["id"]}", "#{article2.id}"]) %>
            <% if @votee.empty? %>
              <%= link_to '<div class="divo"><h4 class="m-0"><i class="fas fa-caret-square-up"></i></h4><strong><h6>UP VOTE</h6></strong></div>'.html_safe, "/votes/vote_up/#{article2.id}", method: :get, class:"text-right nav-link  orange" %>
            <% else %>
              <p class="btn btn-secondary">Voted</p>
            <% end %>
          </div>
          <div class="col-6">
            <%= image_tag "#{article2.image.downcase}", class:"cover-img" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    <% reverse = true %>
  <% end %>
<% end %>
</div><br><br><br><br><br>







